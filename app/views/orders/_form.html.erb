<%= form_for [@customer, order] do |form| %>
  
  <div class="field">
    <%= form.label "Product name" %>
    <%= form.text_field :product_name %>
  </div>

  <div class="field">
    <%= form.label "Product count" %>
    <%= form.text_field :product_count %>
  </div>

  <%= form.hidden_field(:customer_id) %>

  <br>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>